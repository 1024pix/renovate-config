{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": ["/^(node|cimg/node)$/"],
      "groupName": "node",
      "rangeStrategy": "bump",
      "versioning": "node"
    },
    {
      "matchPackageNames": ["/^@1024pix//"],
      "minimumReleaseAge": "0",
      "rangeStrategy": "bump"
    },
    { "matchPackageNames": ["/^@1024pix/pix-ui$/"], "groupName": "pix-ui" },
    {
      "matchPackageNames": ["/^@1024pix/ember-testing-library$/"],
      "groupName": "pix-ember-testing-library"
    },
    {
      "matchPackageNames": ["/^@1024pix/stylelint-config$/"],
      "groupName": "pix-stylelint-config"
    },
    {
      "matchPackageNames": ["/^@1024pix/eslint-config$/"],
      "groupName": "pix-eslint-config"
    },
    { "matchPackageNames": ["/^eslint$/"], "groupName": "eslint" },
    { "matchPackageNames": ["/^sinon$/"], "groupName": "sinon" },
    { "matchPackageNames": ["/^qunit$/"], "groupName": "qunit" },
    {
      "matchPackageNames": ["/^nginx$/"],
      "matchManagers": [
        "circleci",
        "docker-compose",
        "dockerfile",
        "github-actions"
      ],
      "groupName": "nginx"
    },
    {
      "matchPackageNames": ["/^redis$/"],
      "matchManagers": [
        "circleci",
        "docker-compose",
        "dockerfile",
        "github-actions"
      ],
      "groupName": "redis"
    },
    {
      "matchPackageNames": ["/^postgres$/"],
      "matchManagers": [
        "circleci",
        "docker-compose",
        "dockerfile",
        "github-actions"
      ],
      "groupName": "postgres"
    }
  ]
}
