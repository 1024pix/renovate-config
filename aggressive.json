{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>1024pix/renovate-config:default"],
  "schedule": ["at any time"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "automerge": true
    },
    {
      "matchDatasources": ["npm"],
      "stabilityDays": 7
    }
  ]
}
